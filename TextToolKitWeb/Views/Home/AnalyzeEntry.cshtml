@*
    Entry Field and submission button will go here
*@
@model AnalyzeModel

    <style type="text/css">
        .picture {
            background-image: url(../Images/HomePagePic.png);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
            background-size: cover;
            position: fixed;
            height: 100px;
            width: 100%;
        }
    </style>

    <div class="picture" style="left:0;">
    </div>
    <div style="padding-top:130px; padding-bottom:60px">
        <h4><u><b>Analyze: Entry</b></u></h4>
        <br />
        <br />
        @using (Html.BeginForm("FormAnalyze", "Home", FormMethod.Post))
        {
            <table cellpadding="0" cellspacing="0">
                <tr>
                    <th colspan="2" align="center">Enter Text for Analysis</th>
                </tr>
                <tr>
                    <td>@Html.TextAreaFor(m => m.UserEntry, new { style = "width:600px; height:150px;" })</td>
                </tr>
                <tr>
                    <td style="font-size: small; background-color: yellow;">* Your entry can not be empty and must contain at least one letter, number, or special character.</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td><input type="submit" value="Submit" /></td>
                </tr>
            </table>
        }
        <br />


        <table cellpadding="0" cellspacing="0" style="border-top: thin solid black; width: 100%">
            <tr>
                <td style="font-size:small;">* Letter casing is ignored in analysis. All will be counted as lower case.</td>
            </tr>
            <tr>
                <td style="font-size:small;">* Words are counted as characters before a space or ending punctuation ( .!?,;: ).</td>
            </tr>
            <tr>
                <td style="font-size:small;">* If space is the Most Used Character, the analysis will list 'Space followed by' the next most used character(s).</td>
            </tr>
            <tr>
                <td style="font-size:small;">* If space is the Least Used Character, the analysis will list 'Space followed by' the next least used character(s).</td>
            </tr>
        </table>

    </div>
    <div class="picture" style=" bottom:0; left:0">
    </div>
